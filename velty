#!/usr/bin/env php
<?php

$command = $argv[1] ?? null;
$argument = $argv[2] ?? null;

switch ($command) {
    case 'run':
        $host = 'localhost';
        $port = '8000';
        $publicDir = __DIR__ . '/public';

        $box = <<<BOX
\033[92m
â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
â•‘                                              â•‘
â•‘     ðŸš€ Velty Framework ha iniciado el viaje  â•‘
â•‘                                              â•‘
â•‘     ðŸŒ http://$host:$port                 â•‘
â•‘     ðŸ§  CTRL + C para detener el servidor     â•‘
â•‘                                              â•‘
â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
\033[0m
BOX;

        echo $box . "\n";
        system("php -S $host:$port -t $publicDir");
        break;

    case 'make:controller':
        if (!$argument) {
            echo "âŒ Debes indicar un nombre de controlador.\n";
            exit;
        }

        $controllerDir = __DIR__ . '/app/Controllers';
        if (!is_dir($controllerDir)) {
            mkdir($controllerDir, 0777, true);
        }

        $filePath = "$controllerDir/{$argument}.php";

        if (file_exists($filePath)) {
            echo "âš ï¸  El controlador ya existe: {$argument}\n";
            exit;
        }

        $template = <<<PHP
<?php

namespace App\Controllers;

class {$argument}
{
    public function index()
    {
        echo "Hola desde {$argument}@index!";
    }
}
PHP;

        file_put_contents($filePath, $template);
        echo "âœ… Controlador {$argument} creado en app/Controllers/{$argument}.php\n";
        break;

    case 'init':
        echo "âš™ï¸  Inicializando proyecto Velty...\n";
        // PodrÃ­as copiar archivos base o simplemente mostrar mensaje por ahora
        echo "âœ… Proyecto listo. Usa 'php velty run' para empezar.\n";
        break;

    default:
        echo "ðŸ“˜ Comandos disponibles:\n";
        echo "  php velty run                 # Inicia el servidor local\n";
        echo "  php velty init                # Inicializa un proyecto base\n";
        echo "  php velty make:controller Foo # Crea un controlador llamado Foo\n";
        break;
}
